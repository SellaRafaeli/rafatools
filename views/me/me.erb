<h1> Me </h1>

<div>
	<h4>Your phone number: <%= cu['num'] %></h4>
	
	<h4>Your account is active: <span class='active'> <%= !!cu['active'] %> </span> <button onclick=toggleActive()> Toggle </button></h4>

	<% if !cu['paid'] %>	
	<h4> Pay to start getting messages: <%= erb :'other/stripe' %> </h4>
	<% else %>

	<% end %>

	<a href='/logout' class='btn btn-primary btn-raised'> Log out </a>
	

</div>

<script>
function toggleActive() {
	$.post('/me/toggle_active').then(res => { 
		console.log(res);
		$('.active').text(res.active);
	});
}
</script>